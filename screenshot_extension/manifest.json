{
    "name": "GMV AI:Convert Any URL to Video with AI",
    "version": "1.1.1",
    "description": "Convert any URL into engaging videos in a few clicks. Boost your content strategy with GMV AI â€” perfect for social media!.",
    "manifest_version": 3,
    "background": {"service_worker": "background.js"},
    "permissions": ["activeTab", "debugger", "storage","tabs","scripting"],
    "host_permissions": [
      "<all_urls>",
        "http://localhost:3000/*",
        "http://*/*",
        "https://*/*"
      ],
      "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": [
            "content.js"
          ]
        }
      ],
    "icons": {
        "512": "download.png",
        "256": "download.png",
        "128": "download.png",
        "64": "download.png",
        "48": "download.png",
        "16": "download.png"
    },
    "action": {"default_popup": "popup.html"}
}
