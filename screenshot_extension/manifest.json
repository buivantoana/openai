{
    "name": "Full page screen capture",
    "version": "1.1.1",
    "description": "Captures full page, high resolution screenshots without scrolling or glitches. Up to 4x normal screen resolution.",
    "manifest_version": 3,
    "background": {"service_worker": "background.js"},
    "permissions": ["activeTab", "debugger", "storage","tabs","scripting"],
    "host_permissions": [
      "<all_urls>",
        "http://localhost:3000/*",
        "http://*/*",
        "https://*/*"
      ],
      "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": [
            "content.js"
          ]
        }
      ],
    "icons": {
        "512": "icon-512.png",
        "256": "icon-256.png",
        "128": "icon-128.png",
        "64": "icon-64.png",
        "48": "icon-48.png",
        "16": "icon-16.png"
    },
    "action": {"default_popup": "popup.html"}
}
